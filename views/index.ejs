<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <link rel="stylesheet" href="../public/styles.css">
</head>
<body>
  <header>
    <h1>My Blog</h1>
  </header>
  <main>
    <h2>Recent Blog Posts</h2>
    <ul>
      <% posts.forEach(post => { %>
        <li>
          <h3><%= post.title %></h3>
          <p><%= post.content.substring(0, 100) %></p>
          <a href="/post/<%= post.id %>">Read More</a>
        </li>
      <% }); %>
    </ul>
  </main>
  <footer>
    &copy; 2023 My Blog
  </footer>
</body>
</html>
